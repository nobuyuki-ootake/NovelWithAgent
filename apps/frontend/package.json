{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:vercel": "pnpm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:evidence": "playwright test e2e/pages/writing-evidence-simplified.spec.ts --reporter=line",
    "test:evidence:headed": "playwright test e2e/pages/writing-evidence-simplified.spec.ts --headed --reporter=line",
    "test:evidence:full": "playwright test e2e/pages/writing-functionality-evidence.spec.ts --reporter=line",
    "test:regression": "playwright test e2e/pages/writing-evidence-simplified.spec.ts --grep=\"回帰テスト\" --reporter=line",
    "test:timeline:ai": "playwright test e2e/pages/timeline-page-ai-enhanced.spec.ts --reporter=line",
    "test:timeline:ai:headed": "playwright test e2e/pages/timeline-page-ai-enhanced.spec.ts --headed --reporter=line",
    "test:worldbuilding:ai": "playwright test e2e/pages/world-building-page-ai-enhanced.spec.ts --reporter=line",
    "test:worldbuilding:ai:headed": "playwright test e2e/pages/world-building-page-ai-enhanced.spec.ts --headed --reporter=line",
    "test:ai-enhanced": "playwright test e2e/pages/timeline-page-ai-enhanced.spec.ts e2e/pages/world-building-page-ai-enhanced.spec.ts --reporter=line",
    "test:ai-enhanced:headed": "playwright test e2e/pages/timeline-page-ai-enhanced.spec.ts e2e/pages/world-building-page-ai-enhanced.spec.ts --headed --reporter=line",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/noto-sans-jp": "^5.2.5",
    "@fontsource/noto-serif-jp": "^5.2.5",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@mui/x-charts": "^8.0.0",
    "@novel-ai-assistant/types": "workspace:*",
    "@types/slate": "^0.47.16",
    "@types/slate-react": "^0.50.0",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.508.0",
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-calendar-timeline": "^0.30.0-beta.3",
    "react-contenteditable": "^3.3.7",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.5.0",
    "recoil": "^0.7.7",
    "slate": "^0.112.0",
    "slate-dom": "^0.112.2",
    "slate-history": "^0.113.1",
    "slate-react": "^0.112.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/js": "^9.22.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@testing-library/jest-dom": "^6.4.0",
    "@types/react": "^19.1.2",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^19.1.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "storybook": "^8.6.12",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vitest": "^3.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
