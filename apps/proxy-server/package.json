{
  "name": "novel-creation-agent-proxy",
  "version": "0.1.0",
  "type": "module",
  "description": "AI APIプロキシサーバー for 小説作成エージェント",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec \"tsx src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "keywords": [
    "api-proxy",
    "openai",
    "claude",
    "gemini",
    "novel-creation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.11.0",
    "@google/generative-ai": "^0.24.1",
    "@novel-ai-assistant/types": "workspace:*",
    "@types/express-session": "^1.18.2",
    "@types/js-yaml": "^4.0.9",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "langchain": "^0.3.31",
    "mastra": "0.6.1",
    "openai": "^4.28.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "typescript": "^5.3.2"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
